<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration supports_adding_forbidden="true">
  <property>
    <name>password</name>
    <value/>
    <property-type>PASSWORD</property-type>
    <display-name>Password</display-name>
    <description>
      Useage: redis-cli -c -h redis_node_ip -p redis_port -a this_password
    </description>
    <value-attributes>
      <overridable>false</overridable>
      <type>password</type>
    </value-attributes>
    <on-ambari-upgrade add="true"/>
  </property>
  <property>
    <name>port</name>
    <value>7000</value>
    <description>redis start port.</description>
  </property>
  <property>
    <name>replica_port</name>
    <value>7001</value>
    <description>redis start replica port.</description>
  </property>
  <property>
    <name>db_path</name>
    <value>/data/redis</value>
    <description>Path where the redis data and log is stored.</description>
    <value-attributes>
      <type>directory</type>
    </value-attributes>
  </property>
</configuration>
